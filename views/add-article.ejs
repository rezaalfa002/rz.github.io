<div class="container mt-3">
  <div class="row">
       <div class="col-md-6 mt-6">
          <h2>Form Tambah Artikel</h2>
          
          <% if (typeof errors != 'undefined') { %>
              <!-- alert dari bootstrap -->
              <div class="alert alert-danger" role="alert">
                  <ul>
                      <% errors.forEach(error => { %>
                          <li><%= error.msg %> </li>
                       
                      <% }) %>
                  </ul>
                </div>
          <% } %>

          <!-- tinymce/docx layout on textarea -->
          <script src="https://cdn.tiny.cloud/1/utatpea1750wxg0fqc5i1tbvzhf5rm9w040tuguij4w2v5z6/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
          <script>
            tinymce.init({
              selector: '#mytextarea'
            });
          </script>

          <form method="post" action="/article"> <!-- ini dari bootstrap FORM-->
              <!-- alt+shift+bawah -->
              <div class="mb-3"> 
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
                </div>
              <div class="mb-3">
                <label Sfor="subtitle" class="form-label">Subtitle</label>
                <input type="text" class="form-control" id="subtitle" name="subtitle" required>
                </div>
                <div class="control-group mb-3">
                  <div class="form-group floating-label-form-group controls">
                      <label>Content</label>
                      <textarea id="mytextarea" class="mytextarea" name="content" rows="20" cols="20" placeholder="Content" ></textarea>
                  </div>
              </div>
              <div class="mb-3">
                <label Sfor="image" class="form-label">Image URL address</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="paste your image Address here" required>
                </div>
                <div class="mb-3">
                  <label Sfor="author" class="form-label">Author</label>
                  <input type="text" class="form-control" id="author" name="author" placeholder="your name" required>
                  </div>
                  <div class="mb-3">
                    <label Sfor="tanggal" class="form-label">Tanggal Update</label>
                    <input type="date" class="form-control" id="tanggal" name="tanggal"  required>
                    </div>
                    <div class="mb-3">
                      <label Sfor="sosmed" class="form-label">Url Sosial Media</label>
                      <input type="text" class="form-control" id="sosmed" name="sosmed"  required>
                      </div>
              <!-- <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
              </div> -->
              <!-- <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
              </div> -->
              <button type="submit" class="btn btn-primary mt-2">Tambah Artikel</button>
            </form>
       </div>
  </div>
</div>